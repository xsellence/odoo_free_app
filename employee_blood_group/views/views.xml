<odoo>
  <data>
      <record id="view_employee_form_inherit_xl" model="ir.ui.view">
            <field name="name">view.employee.form.xl</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                  <xpath expr="//field[@name='work_email']" position="after">
                      <field name="blood_group"/>
        		  </xpath>
            </field>
        </record>

      <record id="hr_employee_public_view_form_inherit_xl" model="ir.ui.view">
            <field name="name">view.employee.form.public.xl</field>
            <field name="model">hr.employee.public</field>
            <field name="inherit_id" ref="hr.hr_employee_public_view_form" />
            <field name="arch" type="xml">
                  <xpath expr="//field[@name='work_email']" position="after">
                      <field name="blood_group"/>
        		  </xpath>
            </field>
      </record>
  </data>
</odoo>
